{
  "name": "cosmas",
  "version": "1.1.0",
  "description": "Cosmas is a pino-based logger for all your writing needs",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --strict --noImplicitReturns --noUnusedLocals --noUnusedParameters",
    "lint-staged": "lint-staged",
    "test": "NODE_ENV= jest",
    "test-watch": "NODE_ENV= jest --watch",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "tslint -p . --force --format codeFrame",
    "pretty": "prettier --parser typescript --write 'src/*.ts'",
    "prepublishOnly": "npm run build",
    "check": "npm-check -i husky -i ts-jest -i tslint-config-ackee && exit 0",
    "clean": "rm -rf ./node_modules && npm i && npm t"
  },
  "lint-staged": {
    "*.ts": [
      "npm run pretty"
    ]
  },
  "author": "Michal Vlas√°k <michal.vlasak@ackee.cz>",
  "license": "ISC",
  "engines": {
    "node": "^6.14.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AckeeCZ/cosmas"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/pino": "^4.16.1",
    "lodash.foreach": "^4.5.0",
    "lodash.isempty": "^4.4.0",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1",
    "omit-deep": "^0.3.0",
    "on-finished": "^2.3.0",
    "on-headers": "^1.0.1",
    "pick-deep": "^1.0.0",
    "pino": "^4.17.6",
    "pino-multi-stream": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/lodash.foreach": "^4.5.4",
    "@types/lodash.isempty": "^4.4.4",
    "@types/lodash.isobject": "^3.0.4",
    "@types/lodash.isstring": "^4.0.4",
    "@types/node": "^10.12.0",
    "@types/on-finished": "^2.3.1",
    "@types/on-headers": "^1.0.0",
    "coveralls": "^3.0.2",
    "express": "^4.16.3",
    "husky": "^2.7.0",
    "jest": "^24.1.0",
    "jest-extended": "^0.11.1",
    "lint-staged": "^7.3.0",
    "npm-check": "^5.9.0",
    "prettier": "^1.14.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-config-ackee": "^0.3.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
